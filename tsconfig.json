{
	"compilerOptions": {
		"target": "es5",
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"skipDefaultLibCheck": true,
		"sourceMap": true,
		"declaration": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"removeComments": true,
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"es2017",
			"es2015",
			"dom",
			"es6"
		],
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
